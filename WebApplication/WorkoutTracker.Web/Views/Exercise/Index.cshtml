@{
    ViewBag.Title = "Exercises";
}

<div id="page-root">
    <div id="div-exercise-listing">
    </div>
    <span id="span-add-new-exercise">Add New Exercise</span>
    <div id="fieldset-add-new-exercise" class="is-not-visible" >
        <fieldset class="inline">
            <p>
                <label><strong>Name</strong></label>
                <input type="text" class="long" />
            </p>
            <p>
                <label><strong>Description</strong></label>
                <textarea rows="3" cols="50"></textarea>
            </p>
            <p>
                <label><strong>Push/Pull</strong></label>
                <select>
                    <option value="Push">Push</option>
                    <option value="Pull">Pull</option>
                </select>
            </p>
        </fieldset>
        <button type="submit">Save</button>
        <button type="reset">Cancel</button>
    </div>
</div>
<script src="~/js/dist/ExerciseIndex.bundle.js"></script>
<script type="text/javascript">

    (function () {
        var index = new ExerciseIndex(document, "@($"http://{Context.Request.Host}{Context.Request.PathBase}")");
        index.Initialize();
    })();
</script>